<?xml version="1.0" encoding="utf-8" ?>
<StackLayout Padding="20" 
             Orientation="Vertical"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_NoteApp.Controls.FlyoutHeaderControl">
    <StackLayout Orientation="Horizontal" Spacing="10">
        <Label x:Name="labelUserName"  FontSize="18" FontAttributes="Bold" />
        <Label VerticalTextAlignment="Center" FontAttributes="Bold" x:Name="labelUserRole" FontSize="12" />
    </StackLayout>
    <Label x:Name="labelUserEmail" FontSize="18" />
</StackLayout>
